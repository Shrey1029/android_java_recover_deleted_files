<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/windowBackground"
    android:gravity="center_horizontal">

    <!-- Search Type Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/searchtype"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="start"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioContains"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contains"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />

        <RadioButton
            android:id="@+id/radioStartsWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startwith"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />

        <RadioButton
            android:id="@+id/radioEndsWith"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/endwith"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />
        <RadioButton
            android:id="@+id/radioPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filepath"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />

    </RadioGroup>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#CCCCCC" />

    <!-- Case Sensitivity Options -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/casesensitivity"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="start"/>

    <RadioGroup
        android:id="@+id/radioGroupCase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/radioCaseSensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/casesensitive"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />

        <RadioButton
            android:id="@+id/radioCaseInsensitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/caseinsensitive"
            android:paddingEnd="16dp"
            android:paddingStart="16dp" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/excludefolders"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="start" />


    <TextView
        android:id="@+id/multiExcludeFolders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drawableEndCompat="@drawable/ic_dropdown_arrow"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:background="@drawable/input_background"
        android:hint="@string/foledrbox"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#CCCCCC" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/excludeextension"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:gravity="start" />


    <TextView
        android:id="@+id/multiExcludeExtensions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/extensionbox"
        android:textColor="@color/colorOnBackground"
        android:padding="12dp"
        android:background="@drawable/input_background"
        app:drawableEndCompat="@drawable/ic_dropdown_arrow"
        app:drawableTint="@color/colorAccent"
        android:textSize="16sp" />
</LinearLayout>
